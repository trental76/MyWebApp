@using MudBlazor
@using MyWebApp.Models

<MudCard Style="animation" @onclick ="@(()=>OnItemSelected.InvokeAsync(Item))">
    <MudCardContent>
        <MudText Typo="Typo.h5" Color="Color.Info">@Item.Title</MudText>
        <MudText Typo="Typo.h6">@Item.Category</MudText>
        <MudText Typo="Typo.body1">@Item.Status</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public SectionItem Item { get; set; } = new SectionItem();
    [Parameter] public EventCallback<SectionItem> OnItemSelected { get; set; }
}